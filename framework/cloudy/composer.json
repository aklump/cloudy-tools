    "license": "BSD-3-Clause",
    "version": "1.7.9",
    "require": {
        "symfony/yaml": "^3.4 || ^4 || ^5 || ^6",
        "justinrainbow/json-schema": "^5.2",
        "aklump/loft-lib": "^2.1",
        "jasny/dotkey": "^1.0",
        "ckr/arraymerger": "^2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
